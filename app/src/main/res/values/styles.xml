<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color_2</item>
        <item name="colorPrimaryDark">@color/background_color_2</item>
        <item name="colorAccent">@color/color_4</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color_2</item>
        <item name="colorPrimaryDark">@color/background_color_2</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="MaterialChipAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color_2</item>
        <item name="colorPrimaryDark">@color/background_color_2</item>
        <item name="colorAccent">@color/color_4</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="RestAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_color_2</item>
        <item name="colorPrimaryDark">@color/background_color_2</item>
        <item name="colorAccent">@color/color_4</item>
        <item name="android:fontFamily">@font/nunito_semibold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="colorControlActivated">@color/color_3</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
