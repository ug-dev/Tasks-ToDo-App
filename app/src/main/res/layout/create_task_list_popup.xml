<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="3dp"
    android:backgroundTint="#2e2d2d"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="8dp"
        android:layout_gravity="center_vertical"
        android:paddingEnd="16dp"
        android:minHeight="65dp"
        android:background="@drawable/task_row_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/checkbox_uncheck"
            android:tint="#999"
            android:background="@null"
            android:backgroundTint="@null"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_checkbox_unchecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/checkbox_check"
            android:tint="@color/theme_color_1"
            android:background="@null"
            android:backgroundTint="@null"
            android:layout_marginStart="6dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_checkbox_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/row_task_title"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_tags"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/task_myDay_tag"
                    android:src="@drawable/ic_sun_14"
                    android:tint="#999"
                    android:visibility="gone"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/my_day" />

                <TextView
                    android:id="@+id/task_myDay_text_tag"
                    android:text="@string/my_day"
                    android:visibility="gone"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"
                    android:textColor="#999"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/task_list_name_text_tag"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"
                    android:textColor="#999"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/task_dueDate_tag"
                    android:src="@drawable/ic_row_task_due_date"
                    android:tint="#999"
                    android:visibility="gone"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/my_day" />

                <TextView
                    android:id="@+id/task_dueDate_text_tag"
                    android:text="Tommorow"
                    android:visibility="gone"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#999"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/task_repeat_tag"
                    android:src="@drawable/ic_repeat_14"
                    android:tint="#999"
                    android:visibility="gone"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/my_day" />

                <ImageView
                    android:id="@+id/task_reminder_tag"
                    android:src="@drawable/ic_bell_14"
                    android:tint="#999"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/my_day" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/task_important_uncheck"
            android:tint="#999"
            android:background="@null"
            android:backgroundTint="@null"
            android:visibility="visible"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_important_28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/task_important_check"
            android:tint="@color/theme_color_1"
            android:background="@null"
            android:backgroundTint="@null"
            android:visibility="gone"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_task_important"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>